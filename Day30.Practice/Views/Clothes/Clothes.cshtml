@model IEnumerable<Day30.Practice.Models.Clothes>

@{
    ViewBag.Title = "Clothes";
}

<div class="container">
    <div class="row">
        <div class="col-3"></div>
        <div class="col-6">
            <h2>Clothes Details</h2>

            <table class="table  table-hover">
                <tr>
                    <th>Id</th>
                    <th>ClothName</th>
                    <th>Gender</th>
                </tr>
                @foreach (var prd in Model)
                {
                    <tr>
                        <td>@prd.Id</td>
                        <td>@prd.ClothName</td>
                        <td>@prd.Gender</td>
                        
                    </tr>
                }

            </table>
        </div>
    </div>
</div>
