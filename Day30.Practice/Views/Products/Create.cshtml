@using Day30.Practice.Models
@model Product

@{
    ViewBag.Title = "Create";
}

<h2>Add New Product</h2>
<hr />

<div class="container">
    <div class="row">
        <div class="col-6">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(false, "", new { @class = "text-danger" })

                <div class="mb-2">
                    @Html.LabelFor(p => p.ProductName)
                    @Html.TextBoxFor(p => p.ProductName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(p => p.ProductName)
                </div>
                <div class="mb-2">
                    @Html.LabelFor(p => p.Price)
                    @Html.TextBoxFor(p => p.Price, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.Price)
                </div>
                <div class="mb-2">
                    @Html.LabelFor(p => p.Quantity)
                    @Html.TextBoxFor(p => p.Quantity, new { @class = "form-control" })
                    @Html.ValidationMessageFor(p => p.Quantity)
                </div>
                <div class="mb-2">
                    @Html.LabelFor(p => p.CategoryId)
                    @Html.DropDownListFor(p => p.CategoryId, new SelectList(ViewBag.Categories, "Id", "Name"), "--Select--", new { @class = "form-select" })
                    @Html.ValidationMessageFor(p => p.CategoryId)
                </div>
                <div class="mb-2">
                    <button type="submit" class="btn btn-outline-primary">Save</button>
                    <button type="reset" class="btn btn-danger">Reset</button>
                </div>
            }
        </div>
    </div>
</div>



