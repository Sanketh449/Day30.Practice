@model IEnumerable<Day30.Practice.Models.Product>

@{
    ViewBag.Title = "Index";
}

<div class="container">
    <div class="row">
        <div class="col-6">
            @Html.ActionLink("Add New Product", "Create", "Products")
            <h2>Product Details</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-6">
            <table class="table table-hover">
                <tr>
                    <th>Product Id</th>
                    <th>Product Name</th>
                    
                </tr>
                @foreach (var prd in Model)
                {
                    <tr>
                        <td>@prd.Id</td>
                        <td>@Html.ActionLink(prd.ProductName, "Details", "Products", new { id = prd.Id }, null) </td>
                       
                    </tr>
                }

            </table>
        </div>
    </div>
</div>

