@model Day30.Practice.ViewModels.ProductsByCategoryVM

@if (Model.Products != null)
{
    if (Model.Products.Count() > 0)
    {
        <div class="col-6 mb-3">
            <table class="table table-striped table-hover">
                <tr>
                    <th>Product Name</th>
                    <th>Price</th>
                    <th>Quantity</th>
                </tr>
                @foreach (var prd in Model.Products)
                {
                    <tr>
                        <td>@prd.ProductName</td>
                        <td>@prd.Price</td>
                        <td>@prd.Quantity</td>
                    </tr>
                }
            </table>
        </div>
    }
    else
    {
        <div class="h3">No Records</div>
    }
}
